<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.invite.FamilyNameFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_InviteCode1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:title="가족 초대"
        app:titleTextAppearance="@style/Toolbar_title"
        tools:layout_editor_absoluteY="-7dp"
        app:navigationIcon="@drawable/ic_left_arrow"/>

    <TextView
        android:id="@+id/tv_small_family_name_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가족명 생성"
        style="@style/Top_bold_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf ="@+id/toolbar_InviteCode1"/>

    <TextView
        android:id="@+id/tv_gray_family_ex2"
        style="@style/Top_gray_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="우리 가족의 별명을 지어주세요!\n(최대 8글자 이내)"
        app:layout_constraintTop_toBottomOf="@+id/tv_small_family_name_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="226dp" />

    <EditText
        android:id="@+id/et_family_name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_invite_link_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gray_family_ex2"/>

    <Button
        android:id="@+id/bt_name_chk"
        style="@style/Button_Title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_intro"
        android:text="가족 코드 발급"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_family_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>